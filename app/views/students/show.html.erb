<p id="notice"><%= notice %></p>

<div class="container">

<div class="row">
  <div class="col-md-3 col-md-offset-0">
  
  <div class="panel panel-default">
  <div class="panel-body">


<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Graduation year:</strong>
  <%= @student.graduation_year %>
</p>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Contact:</strong>
  <%= @student.contact %>
</p>

<%= link_to 'Edit', edit_student_path(@student), class: "btn btn-warning" %> |
<%= link_to 'Back', students_path, class: "btn btn-primary" %>


  </div>
  </div>
  </div>
  
  
  
  <div class="col-md-9 col-md-offset-0">
  
  <div class="panel panel-default">
  <div class="panel-body">
  
    <h3> Events Attended: </h3>
    
    <table class = "table table-hover">
      <thead>
    	<th> Name </th>
    	<th> Location </th>
    	<th> Type </th>
    	<th> Date </th>
      </thead>
    	
      <tbody>
        <% @events.each do |event| %>
    	<tr>	
    	  <td> <%= event.name %> </td>
    	  <td> <%=event.location %></td>
    	  <td> <%=event.event_type %></td>
    	  <td> <%= event.event_date.strftime("%b %e, %Y at %l:%M %P") %> </td>
    	  <td> <%= link_to 'show', event_path(event), class: "btn btn-primary btn-xs"%> </td>
    	</tr>
    	<% end %>
      </tbody>
    </table>
    		
    
  
  </div>
  </div>
  </div>
  
  
  
</div>
</div>