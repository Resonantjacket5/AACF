<div class="container">

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  
  <div class="panel panel-default">
  <div class="panel-body">


<h1>Listing students</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Graduation year</th>
      <th>Email</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.graduation_year %></td>
        <td><%= student.email %></td>
        <td><%= student.contact %></td>
        <td><%= link_to 'Show', student, class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: "btn btn-warning" %>


  </div>
  </div>
  </div>
</div>
</div>