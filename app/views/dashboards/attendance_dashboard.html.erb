<div class="container">

<div class = "row">
  <div class = "col-md-5 col-md-offset-3">
    <div class = "text-center">
      <h1> Attendance Dashboard </h1>
      <br />
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-3">
  
    <div class="panel panel-default">
      <div class="panel-body">
        <div class = "text-center">
          <span class="fa fa-calendar fa-5x"></span>
          <br />
          <br />
          <div class = "well well-sm">
            <p> Use this link to view and edit Events </p>
          </div>
          <%= link_to('Edit Events', events_path, :class => 'btn btn-primary')  %>
        </div>
      </div>
    </div>
  
  </div>

  <div class="col-md-3">
  
    <div class="panel panel-default">
      <div class="panel-body">
        <div class = "text-center">
          <span class="fa fa-users fa-5x"></span>
          <br />
          <br />
          <div class = "well well-sm">
            <p> Use this link to view and edit Students </p>
          </div>
          <%= link_to('Edit Students', students_path, :class => 'btn btn-primary')  %>
        </div>
      </div>
    </div>
  
  </div>
  
</div>
</div>