<div class="container">

<div class="row">
  <div class="col-md-12 col-md-offset-0">
  
  <div class="panel panel-default">
  <div class="panel-body">





<h1>Listing prayer_times</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Location</th>
      <th>Event time</th>
      <th>Weekday</th>
      <th>Img url</th>
      <th>Image active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prayer_times.each do |prayer_time| %>
      <tr>
        <td><%= prayer_time.location %></td>
        <td><%= prayer_time.event_time %></td>
        <td><%= prayer_time.weekday %></td>
        <td><%= image_tag(prayer_time.img_url, class: "img-rounded sample-image") %></td>
        <td><%= prayer_time.image_active %></td>
        <td><%= link_to 'Show', prayer_time, class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_prayer_time_path(prayer_time), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', prayer_time, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prayer time', new_prayer_time_path, class: "btn btn-warning" %>



  </div>
  </div>
  </div>
</div>
</div>
