

<div class="container">

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  
  <div class="panel panel-default">
  <div class="panel-body">


<h1>Listing events</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Event type</th>
      <th>Event date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.event_type %></td>
        <td><%= event.event_date.strftime("%D %r") %></td>
        <td><%= link_to 'Show', event, class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Attendance', event_attendance_path(event), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class: "btn btn-warning" %>


  </div>
  </div>
  </div>
</div>
</div>
