  <div class="panel panel-default">
  <div class="list-group-item">
  
  <h1 class="text-center"> <%= "#{@event.name} Attendance"%> </h1>
  
  <%= link_to 'Back to all Events', events_path, class: "btn btn-info"%>
  
  <%= link_to 'Show Event', event_path, class: "btn btn-warning text-right" %>
  
  <%= link_to 'Refresh Present', refresh_div_path, remote: true, class: "btn btn-primary" %>
  </div>
  </div>
  </div>
</div>
</div>


<div class="container">

<div class="row">
  <div class="col-md-5 col-md-offset-2">
  
  <div class="panel panel-default">
  <div class="panel-body">
  
  <h1 class="text-center"> Seniors </h1>
  
  <% @Seniors.each do |student| %>
  
    <% if @students.where(id: student.id).blank? %>
  
      <%= form_for(@attendance, remote: true) do |f| %>

        <div class="field">
          <%= f.hidden_field :student_id, :value => student.id%>
        </div>
        <div class="field">
          <%= f.hidden_field :event_id, :value => @event.id %>
        </div>
        <div class="actions">
          <%= f.submit student.name, remote: true, class:"btn btn-primary attendance-btn #{student.id}"%>
        </div>
      <% end %>
    
    <% end %>

  <% end %>
  
  </div>
  </div>
  </div>
  
  <div class="col-md-3 col-md-offset-0">
  <div class="panel panel-default">
  <div class="panel-body">
  
    <h3> Seniors Present </h3>
      <div id="refresh_seniors">
       
      </div>
  </div>
  </div>
  </div>
  
  
  
</div>
</div>

  
  
