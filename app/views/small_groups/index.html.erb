<div class="container">

<div class="row">
  <div class="col-md-12 col-md-offset-0">
  
  <div class="panel panel-default">
  <div class="panel-body">



<h1>Listing small_groups</h1>

<table class= "table table-hover">
  <thead>
    <tr>
      <th>Leaders</th>
      <th>Img Sample</th>
      <th>Location</th>
      <th>Weekday</th>
      <th>Leaders note 1 active</th>
      <th>Leaders note 2 active</th>
      <th>Leaders note 3 active</th>
      <th>Disabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @small_groups.each do |small_group| %>
      <tr>
        <td><%= small_group.leaders %></td>
        <td><%= image_tag(small_group.img_url, class: "img-rounded sample-image") %></td>
        <td><%= small_group.location %></td>
        <td><%= small_group.weekday %></td>
        <td><%= small_group.leaders_note_1_active %></td>
        <td><%= small_group.leaders_note_2_active %></td>
        <td><%= small_group.leaders_note_3_active %></td>
        <td><%= small_group.disabled %></td>
        <td><%= link_to 'Show', small_group, class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_small_group_path(small_group), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', small_group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Small group', new_small_group_path, class: "btn btn-warning" %>




  </div>
  </div>
  </div>
</div>
</div>



