<div class="container">

<div class="row">
  <div class="col-md-12 col-md-offset-0">
  
  <div class="panel panel-default">
  <div class="panel-body">


<h1>Listing leaders</h1>

<div class="indexedit-form">

<table class = "table-hover table">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Leadership position</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaders.each do |leader| %>
      <tr>
        <td><%= leader.position %></td>
        <td><%= leader.name %></td>
        <td><%= leader.leadership_position %></td>
        <td><%= image_tag(leader.img_url, class: "img-rounded sample-image") %></td>
        <td><%= link_to 'Show', leader, class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Edit', edit_leader_path(leader), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', leader, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>

<%= link_to 'New Leader', new_leader_path, class: "btn btn-primary" %>

  </div>
  </div>
  
  </div>
</div>
</div>
